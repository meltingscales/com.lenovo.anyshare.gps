<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@android:color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/anythink_videoview_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginLeft="25dp" android:layout_above="@+id/anythink_vfpv_fl" android:layout_alignParentTop="true">
        <com.anythink.expressad.videocommon.view.RoundImageView android:id="@+id/anythink_reward_icon_riv" android:layout_width="70dp" android:layout_height="70dp" android:layout_centerVertical="true"/>
        <TextView android:textSize="20dp" android:textStyle="bold" android:textColor="@android:color/white" android:ellipsize="end" android:id="@+id/anythink_reward_title_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="5dp" android:lines="1" android:layout_toRightOf="@+id/anythink_reward_icon_riv" android:layout_alignTop="@+id/anythink_reward_icon_riv"/>
        <com.anythink.expressad.video.dynview.widget.AnyThinkLevelLayoutView android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/anythink_reward_stars_mllv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/anythink_reward_title_tv" android:layout_alignLeft="@+id/anythink_reward_title_tv"/>
    </RelativeLayout>
    <FrameLayout android:id="@+id/anythink_vfpv_fl" android:background="@android:color/black" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <com.anythink.expressad.playercommon.PlayerView android:layout_gravity="center" android:id="@+id/anythink_vfpv" android:layout_width="match_parent" android:layout_height="220dp"/>
        <com.anythink.expressad.video.dynview.widget.AnythinkBaitClickView android:id="@+id/anythink_animation_click_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="220dp"/>
    </FrameLayout>
    <RelativeLayout android:id="@+id/anythink_top_control" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_alignParentTop="true">
        <ImageView android:gravity="center" android:id="@+id/anythink_iv_link" android:visibility="gone" android:layout_width="25dp" android:layout_height="25dp" android:layout_marginLeft="10dp" android:src="@drawable/anythink_reward_notice" android:layout_alignParentLeft="true" android:layout_marginStart="10dp" android:layout_alignParentStart="true"/>
        <com.anythink.expressad.widget.FeedBackButton android:textSize="11sp" android:gravity="center" android:id="@+id/anythink_native_endcard_feed_btn" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="25dp" android:layout_marginLeft="10dp" android:text="@string/anythink_cm_feedback_btn_text" android:layout_toRightOf="@+id/anythink_iv_link" android:layout_alignTop="@+id/anythink_iv_link" android:layout_alignParentLeft="true" android:layout_marginStart="10dp" android:layout_alignParentStart="true"/>
        <TextView android:gravity="center" android:id="@+id/anythink_tv_count" android:layout_width="25dp" android:layout_height="25dp" android:layout_marginLeft="10dp" android:layout_toRightOf="@+id/anythink_native_endcard_feed_btn" android:layout_marginStart="10dp" android:layout_toEndOf="@+id/anythink_native_endcard_feed_btn"/>
        <ImageView android:layout_gravity="end" android:id="@+id/anythink_rl_playing_close" android:layout_width="25dp" android:layout_height="25dp" android:layout_marginRight="10dp" android:src="@drawable/anythink_reward_close" android:layout_alignParentTop="true" android:layout_alignParentRight="true" android:contentDescription="closeButton" android:layout_marginEnd="10dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/anythink_reward_bottom_widget" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_alignBottom="@+id/anythink_vfpv_fl">
        <com.anythink.expressad.video.widget.SoundImageView android:id="@+id/anythink_sound_switch" android:background="@drawable/anythink_reward_end_close_shape_oval" android:padding="6dp" android:visibility="visible" android:layout_width="30dp" android:layout_height="30dp" android:layout_margin="3dp" android:src="@drawable/anythink_reward_sound_open" android:layout_alignBottom="@+id/anythink_vfpv_fl"/>
        <com.anythink.expressad.video.dynview.widget.AnyThinkSegmentsProgressBar android:id="@+id/anythink_reward_segment_progressbar" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginTop="50dp" android:layout_below="@+id/anythink_vfpv_fl" android:layout_alignParentBottom="true">
        <TextView android:textSize="18sp" android:textColor="@android:color/white" android:ellipsize="end" android:gravity="center_horizontal" android:id="@+id/anythink_reward_desc_tv" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="40dp" android:lines="1" android:layout_above="@+id/anythink_reward_click_tv"/>
        <com.anythink.expressad.video.dynview.widget.AnyThinkTextView android:textSize="22sp" android:textStyle="bold" android:ellipsize="end" android:gravity="center" android:id="@+id/anythink_reward_click_tv" android:layout_width="260dp" android:layout_height="50dp" android:maxLength="6" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
        <ImageView android:id="@+id/anythink_reward_logo_iv" android:layout_width="50dp" android:layout_height="18dp" android:layout_below="@+id/anythink_reward_click_tv" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <com.anythink.expressad.widget.rewardpopview.ATAcquireRewardPopView android:id="@+id/anythink_reward_popview" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
</RelativeLayout>
