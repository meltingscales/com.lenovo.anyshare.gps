<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center" android:layout_gravity="center" android:id="@+id/anythink_choice_frl" android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView android:id="@+id/anythink_lv_iv_bg" android:background="@drawable/anythink_order_layout_list_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="centerCrop"/>
    <HorizontalScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <com.anythink.expressad.video.dynview.ordercamp.AblGridView android:gravity="center" android:id="@+id/anythink_order_view_h_lv" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:stretchMode="spacingWidthUniform" android:numColumns="auto_fit"/>
        </LinearLayout>
    </HorizontalScrollView>
    <RelativeLayout android:id="@+id/anythink_native_order_camp_controller" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
        <com.anythink.expressad.video.dynview.widget.AnyThinkDyImageView android:id="@+id/anythink_iv_link" android:layout_width="25dp" android:layout_height="25dp" android:src="@drawable/anythink_reward_notice" android:layout_centerVertical="true"/>
        <com.anythink.expressad.widget.FeedBackButton android:textSize="11sp" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/anythink_native_order_camp_feed_btn" android:paddingLeft="10dp" android:paddingRight="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="25dp" android:text="@string/anythink_cm_feedback_btn_text" android:layout_alignTop="@+id/anythink_iv_link"/>
        <com.anythink.expressad.video.dynview.widget.AnyThinkDyImageView android:id="@+id/anythink_order_view_iv_close" android:layout_width="25dp" android:layout_height="25dp" android:src="@drawable/anythink_reward_close" android:layout_alignParentRight="true" android:contentDescription="closeButton"/>
        <com.anythink.expressad.video.dynview.widget.AnyThinkTextView android:textSize="12sp" android:textColor="@color/anythink_reward_white" android:gravity="center" android:id="@+id/anythink_tv_reward_status" android:background="@drawable/anythink_reward_video_time_count_num_bg" android:paddingLeft="10dp" android:paddingRight="10dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="25dp" android:layout_marginLeft="5dp" android:text="@string/anythink_reward_video_view_reward_time_complete" android:layout_alignTop="@+id/anythink_iv_link"/>
    </RelativeLayout>
    <ImageView android:id="@+id/anythink_iv_logo" android:visibility="gone" android:layout_width="50dp" android:layout_height="18dp" android:layout_marginLeft="13dp" android:layout_marginTop="13dp" android:layout_marginRight="13dp" android:layout_marginBottom="5dp" android:src="@drawable/anythink_reward_end_pager_logo" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
</RelativeLayout>
