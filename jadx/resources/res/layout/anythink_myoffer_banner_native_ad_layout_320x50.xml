    <TextView android:textSize="6sp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/anythink_myoffer_banner_ad_from" android:background="#888888" android:paddingLeft="2dp" android:paddingTop="1dp" android:paddingRight="2dp" android:paddingBottom="1dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginTop="1dp" android:layout_toRightOf="@+id/anythink_myoffer_ad_logo" android:layout_alignParentTop="true"/>
</RelativeLayout>
