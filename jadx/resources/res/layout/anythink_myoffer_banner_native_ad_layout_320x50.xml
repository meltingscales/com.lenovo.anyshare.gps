    </FrameLayout>
    <TextView android:textSize="6sp" android:textColor="#a0a0a0" android:id="@+id/anythink_myoffer_banner_permission_manage" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="7dp" android:text="@string/anythink_myoffer_panel_permission" android:layout_toLeftOf="@+id/anythink_myoffer_ad_choice_container" android:layout_alignParentBottom="true"/>
    <View android:id="@+id/anythink_myoffer_banner_center_line" android:background="#a0a0a0" android:visibility="gone" android:layout_width="1dp" android:layout_height="7dp" android:layout_marginLeft="3dp" android:layout_marginRight="3dp" android:layout_toLeftOf="@+id/anythink_myoffer_banner_permission_manage" android:layout_alignParentBottom="true"/>
    <TextView android:textSize="6sp" android:textColor="#a0a0a0" android:id="@+id/anythink_myoffer_banner_privacy_agreement" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/anythink_myoffer_panel_privacy" android:layout_toLeftOf="@+id/anythink_myoffer_banner_center_line" android:layout_alignParentBottom="true"/>
    <TextView android:textSize="6sp" android:textColor="#a0a0a0" android:id="@+id/anythink_myoffer_banner_version_name" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="3dp" android:layout_toLeftOf="@+id/anythink_myoffer_banner_privacy_agreement" android:layout_alignParentBottom="true"/>
