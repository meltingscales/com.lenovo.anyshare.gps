    <com.anythink.basead.ui.SpreadAnimLayout android:id="@+id/anythink_myoffer_banner_spread_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_centerVertical="true">
