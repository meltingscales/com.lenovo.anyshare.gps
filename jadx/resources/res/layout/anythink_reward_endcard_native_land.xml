<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/anythink_reward_endcard_hor_bg" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/anythink_native_ec_layout" android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="3">
                <ImageView android:id="@+id/anythink_iv_adbanner_bg" android:layout_width="match_parent" android:layout_height="match_parent" android:scaleType="fitXY"/>
                <com.anythink.expressad.videocommon.view.RoundImageView android:id="@+id/anythink_iv_adbanner" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="20dp" android:layout_centerInParent="true"/>
                <com.anythink.expressad.video.dynview.widget.AnyThinkDyImageView android:id="@+id/anythink_iv_flag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="2">
                <ImageView android:id="@+id/anythink_iv_icon" android:layout_width="96dp" android:layout_height="96dp" android:layout_marginLeft="16dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
                <LinearLayout android:orientation="vertical" android:id="@+id/anythink_title_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_toRightOf="@+id/anythink_iv_icon" android:layout_centerVertical="true">
                    <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <TextView android:textSize="15sp" android:textColor="@color/anythink_reward_title_textcolor" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/anythink_tv_apptitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="title" android:maxEms="7" android:singleLine="true"/>
                        <com.anythink.expressad.videocommon.view.StarLevelView android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/anythink_sv_starlevel" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="16dp" android:layout_marginTop="2dp"/>
                        <TextView android:textSize="12sp" android:textColor="@color/anythink_reward_desc_textcolor" android:ellipsize="end" android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="4dp" android:text="(" android:singleLine="true"/>
                        <TextView android:textSize="12sp" android:textColor="@color/anythink_reward_desc_textcolor" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/anythink_tv_number" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="12345)" android:singleLine="true" android:drawableLeft="@drawable/anythink_reward_user" android:drawableStart="@drawable/anythink_reward_user"/>
                    </LinearLayout>
                    <TextView android:textSize="12sp" android:textColor="@color/anythink_reward_desc_textcolor" android:ellipsize="end" android:id="@+id/anythink_tv_appdesc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_marginRight="16dp" android:text="des" android:maxLines="3" android:lineSpacingMultiplier="1.2"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:id="@+id/anythink_cta_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="16dp" android:layout_alignTop="@+id/anythink_iv_icon" android:layout_alignBottom="@+id/anythink_iv_icon" android:layout_alignParentRight="true">
                    <TextView android:textSize="24sp" android:textColor="@android:color/white" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/anythink_tv_cta" android:background="@drawable/anythink_reward_shape_end_pager" android:layout_width="240dp" android:layout_height="50dp" android:layout_marginTop="6dp" android:text="Install Now"/>
                    <ImageView android:layout_gravity="bottom|center_horizontal" android:id="@+id/anythink_iv_logo" android:layout_width="54dp" android:layout_height="10dp" android:layout_marginTop="20dp" android:layout_marginBottom="16dp" android:scaleType="fitXY"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout android:id="@+id/anythink_native_ec_controller" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="9dp">
            <ImageView android:id="@+id/anythink_iv_link" android:layout_width="35dp" android:layout_height="35dp" android:src="@drawable/anythink_reward_notice" android:layout_alignParentLeft="true" android:contentDescription="noteLinkButton"/>
            <com.anythink.expressad.widget.FeedBackButton android:gravity="center" android:id="@+id/anythink_native_endcard_feed_btn" android:paddingLeft="10dp" android:paddingRight="10dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="27dp" android:layout_marginLeft="9dp" android:layout_marginTop="4dp" android:text="@string/anythink_cm_feedback_btn_text" android:layout_toRightOf="@+id/anythink_iv_link" android:layout_alignTop="@+id/anythink_iv_link"/>
            <ImageView android:id="@+id/anythink_iv_close" android:layout_width="35dp" android:layout_height="35dp" android:src="@drawable/anythink_reward_close_ec" android:layout_alignParentRight="true" android:contentDescription="closeButton"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
