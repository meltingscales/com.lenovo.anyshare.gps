<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@color/anythink_reward_black" android:layout_width="match_parent" android:layout_height="match_parent" android:keepScreenOn="true">
    <com.anythink.expressad.playercommon.PlayerView android:id="@+id/anythink_vfpv" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <com.anythink.expressad.video.dynview.widget.AnythinkBaitClickView android:id="@+id/anythink_animation_click_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <com.anythink.expressad.widget.rewardpopview.ATAcquireRewardPopView android:id="@+id/anythink_reward_popview" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <com.anythink.expressad.video.widget.SoundImageView android:layout_gravity="bottom" android:id="@+id/anythink_sound_switch" android:visibility="visible" android:layout_width="35dp" android:layout_height="35dp" android:layout_marginLeft="10dp" android:layout_marginBottom="10dp"/>
    <ProgressBar android:layout_gravity="bottom" android:id="@+id/anythink_video_progress_bar" android:visibility="gone" android:layout_width="match_parent" android:layout_height="4dp" android:progressDrawable="@drawable/anythink_reward_video_progressbar_bg" style="@android:style/Widget.ProgressBar.Horizontal"/>
    <com.anythink.expressad.video.dynview.widget.AnyThinkSegmentsProgressBar android:layout_gravity="bottom" android:id="@+id/anythink_reward_segment_progressbar" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <RelativeLayout android:layout_gravity="end" android:orientation="horizontal" android:id="@+id/anythink_top_control" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
        <ImageView android:gravity="center" android:id="@+id/anythink_iv_link" android:visibility="gone" android:layout_width="35dp" android:layout_height="35dp" android:layout_marginLeft="10dp" android:src="@drawable/anythink_reward_notice" android:layout_alignParentLeft="true"/>
        <com.anythink.expressad.widget.FeedBackButton android:id="@+id/anythink_native_endcard_feed_btn" android:paddingLeft="5dp" android:paddingRight="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="30dp" android:text="@string/anythink_cm_feedback_btn_text" android:layout_toRightOf="@+id/anythink_iv_link" android:layout_centerVertical="true"/>
        <TextView android:textSize="12sp" android:textColor="@color/anythink_reward_white" android:gravity="center" android:id="@+id/anythink_tv_count" android:background="@drawable/anythink_reward_video_time_count_num_bg" android:visibility="visible" android:layout_width="30dp" android:layout_height="30dp" android:layout_marginLeft="5dp" android:layout_toRightOf="@+id/anythink_native_endcard_feed_btn" android:layout_centerVertical="true"/>
        <ImageView android:layout_gravity="end" android:id="@+id/anythink_rl_playing_close" android:layout_width="35dp" android:layout_height="35dp" android:src="@drawable/anythink_reward_close" android:layout_alignParentRight="true" android:contentDescription="closeButton"/>
    </RelativeLayout>
</FrameLayout>
